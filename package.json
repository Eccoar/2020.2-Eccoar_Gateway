{
	"name": "2020.2-eccoar_gateway",
	"version": "1.0.0",
	"description": "",
	"main": "server.js",
	"scripts": {
		"start": "tsnd --transpile-only --respawn --ignore-watch node_modules src/server.ts",
		"build": "node ./build/server.js --env=production",
		"test": "jest --forceExit",
		"lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
		"lint-report": "eslint . --ignore-path .gitignore --ext .js,.ts,.tsx --output-file ./lint-report.html --format html",
		"check-types": "tsc",
		"prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
		"format": "npm run prettier -- --write",
		"check-format": "npm run prettier -- --list-different",
		"validate": "npm-run-all --parallel check-types check-format lint",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Eccoar/2020.2-Eccoar_Gateway.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Eccoar/2020.2-Eccoar_Gateway/issues"
	},
	"homepage": "https://github.com/Eccoar/2020.2-Eccoar_Gateway#readme",
	"dependencies": {
		"axios": "^0.21.1",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"supertest": "^6.1.3"
	},
	"devDependencies": {
		"@types/axios": "^0.14.0",
		"@types/cors": "^2.8.10",
		"@types/express": "^4.17.11",
		"@types/jest": "^26.0.20",
		"@types/morgan": "^1.9.2",
		"@types/node": "^8.0.29",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^4.17.0",
		"@typescript-eslint/parser": "^4.17.0",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.1.0",
		"husky": "^6.0.0",
		"jest": "^26.6.3",
		"jest-sonar-reporter": "^2.0.0",
		"lint-staged": "^10.5.4",
		"morgan": "^1.10.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.2.1",
		"ts-jest": "^26.5.3",
		"ts-node-dev": "^1.1.6",
		"typescript": "^4.2.3"
	},
	"lint-staged": {
		"*.+(js|ts|tsx)": [
			"eslint"
		],
		"**/*.+(js|json|ts|tsx)": [
			"prettier --write",
			"git add"
		],
		"*.--write": "prettier --write"
	}
}
